{
    "editor.fontFamily": "'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace",
    "editor.fontSize": 12,
    "editor.fontWeight": "400",
    "editor.lineHeight": 1.5,
    "editor.letterSpacing": 0,
    "editor.fontLigatures": false,
    
    // Terminal settings to match
    "terminal.integrated.fontFamily": "'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.fontWeight": "400",
    
    // Debug console settings
    "debug.console.fontFamily": "'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace",
    "debug.console.fontSize": 14,
    
    // Optional: Additional editor settings that work well with SF Mono
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [80, 120],
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true
  }